@page
@model ContosoUniversity.Pages.Educations.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Education</h1>

<p>
    <a asp-page="Create">Create New Education</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Education[0].UniName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Education[0].ProgName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Education[0].PassingTime)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Education) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UniName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProgName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PassingTime)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
