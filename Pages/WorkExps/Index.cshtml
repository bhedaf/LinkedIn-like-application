@page
@model ContosoUniversity.Pages.WorkExps.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Work Experience</h1>

<p>
    <a asp-page="Create">Create New Work Experience</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.WorkExp[0].Company)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WorkExp[0].Position)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WorkExp[0].FromDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WorkExp[0].ToDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.WorkExp) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Company)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Position)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FromDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ToDate)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
